{
    "name": "liquiddesign/security",
    "description": "✇ Nadstavba Nette Security rozšířené o databázové služby postavené na StORMu",
    "license": "MIT",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Security\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Security\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "nette/security": "~3.0",
        "nette/utils": "~3.0 || ~4.0",
        "nette/nette": "~3.0",
        "nette/di": "~3.0",
        "liquiddesign/storm": "~2.0",
        "liquiddesign/base": "~2.0",
        "firebase/php-jwt": "^5.5.0",
        "nesbot/carbon": "^2.0"
    },
    "require-dev": {
        "nette/tester": "^2.0",
        "tracy/tracy": "^2.0",
        "composer/composer": "~2.0",
        "liquiddesign/codestyle": "~3.0",
        "liquiddesign/migrator": "~1.0",
        "phpstan/phpstan": "^1.0",
        "phpcompatibility/php-compatibility": "^9.0"
    },
    "scripts": {
        "fix-code": [
            "@phpcsfix"
        ],
        "check-code": [
            "@phpcs",
            "@phpstan"
        ],
        "phpstan": "phpstan analyse --memory-limit 1G -c phpstan.neon",
        "phpcs": "phpcs --standard=ruleset.xml --cache --ignore=assets src",
        "phpcsfix": "phpcbf --standard=ruleset.xml --cache --ignore=assets src",
        "phpcheck8": "phpcs -p ./src --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility --runtime-set testVersion 8.1",
        "tester": "tester tests/Cases/*.phpt  -c tests/php.ini --setup tests/setup.php",
        "aux-sync-database": "Migrator\\Scripts::syncDatabase",
        "sync-database": "@aux-sync-database Security\\Tests\\Bootstrap",
        "check-commit": "@php ./vendor/liquiddesign/codestyle/src/scripts/check-last-commit.php",
        "changelog": "conventional-changelog",
        "release": "@changelog --commit",
        "release:patch": "@changelog --patch --commit",
        "release:minor": "@changelog --minor --commit",
        "release:major": "@changelog --major --commit"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "version": "2.0.7"
}